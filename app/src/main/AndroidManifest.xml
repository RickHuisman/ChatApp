<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rickh.chatapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/ChatApp.BaseTheme">
        <activity
            android:name=".activities.OnboardActivity"
            android:theme="@style/ChatApp.Theme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".activities.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/ChatApp.BaseTheme.NoActionBar" />
        <activity
            android:name=".activities.RegisterActivity"
            android:theme="@style/ChatApp.BaseTheme.NoActionBar"/>
        <activity
            android:name=".activities.LoginActivity"
            android:theme="@style/ChatApp.BaseTheme.NoActionBar"/>
        <activity
            android:name=".activities.AddFriendActivity"
            android:theme="@style/ChatApp.BaseTheme.NoActionBar"
            android:label="Add user"/>
        <activity
            android:name=".activities.FriendRequestsActivity"
            android:theme="@style/ChatApp.BaseTheme.NoActionBar"/>
        <activity
            android:name=".activities.CreateChatActivity"
            android:theme="@style/ChatApp.BaseTheme.NoActionBar"
            />
        <activity android:name=".activities.ChatActivity"
            android:windowSoftInputMode="stateVisible|adjustResize"
            android:theme="@style/ChatApp.BaseTheme.NoActionBar"/>
    </application>

</manifest>